<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>id.global</groupId>
		<artifactId>globalid-parent</artifactId>
		<version>4</version>
	</parent>

	<groupId>id.global.events</groupId>
	<artifactId>maven-eda-plugin-parent</artifactId>
	<version>1.0.7-SNAPSHOT</version>

	<packaging>pom</packaging>
	<name>Event Messaging - Maven Plugins</name>

	<modules>
		<module>amqp-generator-plugin</module>
		<module>asyncapi-generator-plugin</module>
	</modules>

	<properties>
		<version.smallrye.async.api>1.0.6</version.smallrye.async.api>
		<maven.version>3.8.1</maven.version>
		<maven-plugin-annotations.version>3.6.1</maven-plugin-annotations.version>
		<maven-project.version>2.2.1</maven-project.version>
		<httpclient.version>4.5.13</httpclient.version>
		<commons-logging.version>1.2</commons-logging.version>
		<jandex.version>2.3.0.Final</jandex.version>
		<jsonschema2pojo-core.version>1.1.1</jsonschema2pojo-core.version>
		<jackson-databind.version>2.12.4</jackson-databind.version>
		<json-simple.version>1.1.1</json-simple.version>
	</properties>

	<scm>
		<connection>scm:git:git@gitlab.com:globalid/experiments/maven-eda.git</connection>
		<developerConnection>scm:git:git@gitlab.com:globalid/experiments/maven-eda.git</developerConnection>
		<url>https://gitlab.com/globalid/experiments/maven-eda</url>
		<tag>HEAD</tag>
	</scm>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.apache.maven</groupId>
				<artifactId>maven-plugin-api</artifactId>
				<version>${maven.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.maven.plugin-tools</groupId>
				<artifactId>maven-plugin-annotations</artifactId>
				<version>${maven-plugin-annotations.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.maven</groupId>
				<artifactId>maven-project</artifactId>
				<version>${maven-project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.maven</groupId>
				<artifactId>maven-core</artifactId>
				<version>${maven.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.httpcomponents</groupId>
				<artifactId>httpclient</artifactId>
				<version>${httpclient.version}</version>
			</dependency>
			<dependency>
				<groupId>commons-logging</groupId>
